require 'rubygems'
require 'bundler/setup'

require 'railsless-deploy'

set :application, 'Pike'
set :repository,  'git@github.com:virtualpatterns/pike.git'

set :scm, :git

role :web, 'rhombus.zapto.org'
role :app, 'rhombus.zapto.org'
role :db,  'rhombus.zapto.org', :primary => true

set :deploy_to, '/var/www'

set :user, 'fficnar'
set :scm_username, 'virtualpatterns'

default_run_options[:pty] = true

namespace :deploy do
  %w(start stop restart).each do |action|
    desc "#{action} the Thin processes"
    task action.to_sym do
      find_and_execute_task("thin:#{action}")
    end
  end
end

namespace :thin do
  %w(start stop restart).each do |action|
    desc "#{action} the app's Thin Cluster"
    task action.to_sym, :roles => :app do
      run "/etc/init.d/thin #{action}"
    end
  end
end

# if you're still using the script/reaper helper you will need
# these http://github.com/rails/irs_process_scripts

