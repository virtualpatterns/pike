$:.unshift(File.expand_path('./lib', ENV['rvm_path']))

require 'rubygems'
require 'bundler/setup'

require 'rvm/capistrano'
require 'railsless-deploy'

set :application, 'Pike'
set :repository,  'git@github.com:virtualpatterns/pike.git'

set :scm, :git

role :web, 'rhombus.zapto.org'
role :app, 'rhombus.zapto.org'
role :db,  'rhombus.zapto.org', :primary => true

set :deploy_to, '/var/www/pike'

set :user, 'fficnar'
set :scm_username, 'virtualpatterns'

default_run_options[:pty] = true

set :rvm_ruby_string, 'ruby-1.8.7-p352@Pike'        # Or whatever env you want it to run in.
set :rvm_bin_path, '$HOME/.rvm/bin'

namespace :pike do

  desc 'Start the application'
  task :start, :roles => :app do
    run 'cd /var/www/pike/current && bundle install && thin --daemonize --port 8008 --rackup config.ru start'
  end

  desc 'Stop the application'
  task :stop, :roles => :app do
    run 'cd /var/www/pike/current && thin stop'
  end

end

