- self.content_for(:html, :header_left) do
  /
    #{__FILE__}
  = @cancel_button.render(:html) do |element|
    - element.content_for(:html, :body, 'Cancel')
- self.content_for(:html, :header_center) do
  /
    #{__FILE__}
  Task
- self.content_for(:html, :header_right) do
  /
    #{__FILE__}
  = @done_button.render(:html) do |element|
    - element.content_for(:html, :body, 'Done')
- self.content_for(:html, :content) do
  /
    #{__FILE__}
  %table.properties{:cellspacing => 0}
    %tr.property
      %td.name
        Project
      %td.value{:class => @task.project ? '' : 'blank'}
        = @project_link.render(:html) do |element|
          - element.content_for(:html, :body, @task.project ? @task.project.name : 'tap for a project')
    %tr.property
      %td.name
        Activity
      %td.value{:class => @task.activity ? '' : 'blank'}
        = @activity_link.render(:html) do |element|
          - element.content_for(:html, :body, @task.activity ? @task.activity.name : 'tap for an activity')
    %tr.property
      %td.name.last
        Category
      %td.value.last
        = @flag_link.render(:html) do |element|
          - element.content_for(:html, :body, Pike::Task::FLAG_NAMES[@task.flag])
        %div.instructions
          :markdown
            **Liked** tasks appear at the top of the list.

            **Completed** tasks appear at the bottom of the list.
  = @properties.render(:html)
