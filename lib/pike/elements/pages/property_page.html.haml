- self.content_for(:html, :page) do
  /
    #{__FILE__}
  %div{'data-role'  => 'header',
       'data-theme' => 'b'}
    = @back_button.render(:html)
    %h1
      Property
    = @done_button.render(:html)
  %div{'data-role'  => 'content',
       'style'      => 'padding-top: 0px'}
    %ul{'data-inset'  => 'true',
        'data-role'   => 'listview',
        'data-theme'  => 'd'}
      %li
        - if @property
          = @property
        - else
          %label.ui-hidden-accessible{'for' => @property_input.element_id}
            Name
          = @property_input.render(:html)
      %li
        %label.ui-hidden-accessible{'for' => @value_input.element_id}
          Value
        = @value_input.render(:html)

    - if @property
      = @delete_button.render(:html) do |element|
        - element.content_for(:html, :link, 'Remove Property')
