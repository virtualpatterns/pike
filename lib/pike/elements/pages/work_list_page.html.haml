- self.content_for(:header_left) do
  /
    #{__FILE__}
  = @more_button.render(:html) do |element|
    - element.content_for(:body, 'More ...')
- self.content_for(:header_center) do
  /
    #{__FILE__}
  = @date_link.render(:html) do |element|
    - element.content_for(:body, RubyApp::Language.locale.strftime(@work_list.date, Pike::Application.configuration.format.date))
- self.content_for(:header_right) do
  /
    #{__FILE__}
  = @add_task_button.render(:html) do |element|
    - element.content_for(:body, 'Add')
- self.content_for(:content) do
  /
    #{__FILE__}
  - introductions_exist = Pike::Session.identity.user.introductions_as_target.exists?
  - tasks_exist = Pike::Session.identity.user.tasks.exists?
  - if introductions_exist
    %div.notice
      #{Pike::Session.identity.user.introductions_as_target.count} introduction(s) pending acceptance
    = @introduction_list.render(:html)
  - if tasks_exist
    = @work_list.render(:html)
  - else
    - if introductions_exist
      %div{:style => 'margin-top: 10px;'}
    = @content.render(:html) do |element|
      - element.content_for(:body) do
        You haven't created any tasks.  Tap [here](add_task) or use the [Add](add_task) button to create your first task.
