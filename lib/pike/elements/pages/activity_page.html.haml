- self.content_for(:header_center) do
  /
    #{__FILE__}
  Activity
- self.content_for(:content) do
  /
    #{__FILE__}
  %div.properties
    %div.property
      %div.name{:class => @activity.new? ? 'last' : nil }
        Name
      %div.value{:class => @activity.new? ? 'last' : nil }
        = @name_input.render(:html) do |element|
          - element.attributes.merge!(:placeholder => 'Enter a name')
    - unless @activity.new?
      %div.property
        %div.name.last
          &nbsp;
        %div.buttons
          = @delete_button.render(:html) do |element|
            - element.attributes.merge!(:class => 'delete')
            - element.content_for(:body, 'Delete')
