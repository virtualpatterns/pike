- self.content_for(:html, :page) do
  /
    #{__FILE__}
  %div{'data-role'  => 'header',
       'data-theme' => 'b'}
    = @back_button.render(:html)
    %h1
      About
  %div{'data-role'  => 'content',
       'style'      => 'padding-top: 0px'}

    %ul{'data-inset'  => 'true',
        'data-role'   => 'listview',
        'data-theme'  => 'd'}
      %li
        %a{'href'       => 'https://github.com/virtualpatterns/pike',
           'target'     => '_blank'}
          %img.github{'src'   => '/pike/resources/elements/pages/about_page/git.png',
                      'height' => 60}

    %ul{'data-inset'  => 'true',
        'data-role'   => 'listview',
        'data-theme'  => 'd'}
      %li{'data-role' => 'list-divider'}
        %span
          Versions
      %li
        %span
          %code
            RubyApp
        %span.ui-li-aside
          %code
            #{RubyApp::VERSION}
      %li
        %span
          %code
            Pike
        %span.ui-li-aside
          %code
            #{Pike::VERSION}

    %ul{'data-inset'  => 'true',
        'data-role'   => 'listview',
        'data-theme'  => 'd'}
      %li{'data-role' => 'list-divider'}
        %span
          Miscellaneous
      %li
        %span
          User
        %span.ui-li-aside
          %code
            = Pike::Session.identity.user.url
      %li
        %span
          Server
          %br
          &nbsp;
        %span.ui-li-aside
          %code
            = Socket.gethostname
            %br
            = RubyApp::Request.cookies['_server'] || '(unknown instance)'
      %li
        = @information_link.render(:html) do |element|
          - element.content_for(:html, :link, 'System')
