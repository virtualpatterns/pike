- self.content_for(:header_left) do
  /
    #{__FILE__}
  = @cancel_button.render(:html) do |element|
    - element.content_for(:body, 'Cancel')
- self.content_for(:header_center) do
  /
    #{__FILE__}
  Work
- self.content_for(:header_right) do
  /
    #{__FILE__}
  = @done_button.render(:html) do |element|
    - element.content_for(:body, 'Done')
- self.content_for(:content) do
  /
    #{__FILE__}
  %div.properties
    %div.property
      %div.name
        Project
      %div.value
        = @project_link.render(:html) do |element|
          - element.content_for(:body, @work.task.project ? @work.task.project.name : '(tap here to select a project)')
    %div.property
      %div.name
        Activity
      %div.value
        = @activity_link.render(:html) do |element|
          - element.content_for(:body, @work.task.activity ? @work.task.activity.name : '(tap here to select an activity)')
    %div.property
      %div.name
        Category
      %div.value
        = @flag_link.render(:html) do |element|
          - element.content_for(:body, Pike::Task::FLAG_NAMES[@work.task.flag])
    %div.property
      %div.name
        Date
      %div.value
        = RubyApp::Language.locale.strftime(@work.date, Pike::Application.configure.format.date)
    %div.property
      %div.name
        %label{:for => @duration_input.element_id}
          Duration
      %div.value
        = @duration_input.render(:html) do |element|
          - element.attributes.merge!(:autofocus => true, :placeholder => 'tap here to enter a duration')
        %div.instructions
          (e.g. 2h 30m 15s)
    %div.property
      %div.name.last
        &nbsp;
      %div.buttons.last
        = @delete_button.render(:html) do |element|
          - element.attributes.merge!(:class => 'delete')
          - element.content_for(:body, 'Delete')
