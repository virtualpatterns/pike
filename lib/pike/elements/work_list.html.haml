/
  #{__FILE__}
%ul.list{attributes}
  %li.total
    Total:
    %span.total
  - is_even = true
  - total = 0
  - self.items.each_with_index do |item, index|
    - unless item.task.flag == @flag
      %li.flag
        = Pike::Task::FLAG_NAMES[item.task.flag]
    %li.item{:class => ( item.work.started? ? 'started' : ( is_even ? 'even' : 'odd' ) ), :project => item.task.project.name, :activity => item.task.activity.name}
      %div.item
        - if today?
          %a.start{:class => item.work.started? ? 'started' : nil, :href => '', :index => index}
        %a.edit{:href => '', :index => index}
          %div.task_work
            %div.task
              %div.project
                = item.task.project.name
              %div.activity
                = item.task.activity.name
            %div.work{:work_id => item.work.id}
              = ChronicDuration.output(item.work.duration)
    - is_even = !is_even
    - total += item.work.duration
    - @flag = item.task.flag
  :javascript
    $('span.total').text(#{ChronicDuration.output(total).to_json});
